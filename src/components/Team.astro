---
import { t, type Lang } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const team = [
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/><path d="M8 7h6"/><path d="M8 11h8"/></svg>`,
    role: t(lang, 'team.role1'),
    experience: t(lang, 'team.experience1'),
    desc: t(lang, 'team.desc1'),
    skills: ['Java', 'Kotlin', 'Spring Boot', 'Microservices', 'DDD', 'AWS', 'GCP', 'Docker', 'Kubernetes'],
    color: '#6c5ce7',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>`,
    role: t(lang, 'team.role2'),
    experience: t(lang, 'team.experience2'),
    desc: t(lang, 'team.desc2'),
    skills: ['Java', 'Spring Boot', 'TypeScript', 'React', 'Angular', 'AWS', 'Docker', 'Scrum'],
    color: '#00cec9',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/><line x1="14" y1="4" x2="10" y2="20"/></svg>`,
    role: t(lang, 'team.role3'),
    experience: t(lang, 'team.experience3'),
    desc: t(lang, 'team.desc3'),
    skills: ['React', 'Next.js', 'TypeScript', 'Tailwind', 'Vue', 'Figma', 'Accessibility', 'Performance'],
    color: '#e17055',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2"/><line x1="8" y1="21" x2="16" y2="21"/><line x1="12" y1="17" x2="12" y2="21"/><path d="M7 8h2m2 0h4"/><path d="M7 11h8"/></svg>`,
    role: t(lang, 'team.role4'),
    experience: t(lang, 'team.experience4'),
    desc: t(lang, 'team.desc4'),
    skills: ['Node.js', 'Python', 'PostgreSQL', 'Redis', 'GraphQL', 'REST APIs', 'MongoDB', 'RabbitMQ'],
    color: '#0984e3',
  },
  {
    icon: `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>`,
    role: t(lang, 'team.role5'),
    experience: t(lang, 'team.experience5'),
    desc: t(lang, 'team.desc5'),
    skills: ['AWS', 'Terraform', 'Docker', 'Kubernetes', 'CI/CD', 'GitHub Actions', 'Linux', 'Monitoring'],
    color: '#fdcb6e',
  },
];
---

<section class="section team" id="team">
  <div class="container">
    <div class="team-header animate-on-scroll">
      <p class="section-tagline">{t(lang, 'team.tagline')}</p>
      <h2 class="section-title">{t(lang, 'team.title')}</h2>
      <p class="team-subtitle">{t(lang, 'team.subtitle')}</p>
    </div>

    <div class="team-grid">
      {team.map((member, i) => (
        <div class="team-card animate-on-scroll" style={`--member-color: ${member.color}; animation-delay: ${i * 0.15}s`}>
          <div class="team-card-top">
            <div class="team-icon" set:html={member.icon} />
            <div class="team-info">
              <h3 class="team-role-title">{member.role}</h3>
              <span class="team-experience">{member.experience}</span>
            </div>
          </div>
          <p class="team-desc">{member.desc}</p>
          <div class="team-skills">
            {member.skills.map((skill) => (
              <span class="team-skill">{skill}</span>
            ))}
          </div>
          <div class="team-card-glow"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    position: relative;
    overflow: hidden;
  }

  .team-header {
    text-align: center;
    max-width: 650px;
    margin: 0 auto var(--space-3xl);
  }

  .team-subtitle {
    font-size: 1.05rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-xl);
  }

  .team-card {
    position: relative;
    padding: var(--space-2xl);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .team-card:hover {
    border-color: color-mix(in srgb, var(--member-color) 40%, transparent);
    transform: translateY(-4px);
  }

  .team-card-glow {
    position: absolute;
    top: -40%;
    right: -20%;
    width: 180px;
    height: 180px;
    background: var(--member-color);
    opacity: 0.04;
    border-radius: 50%;
    filter: blur(60px);
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .team-card:hover .team-card-glow {
    opacity: 0.1;
  }

  .team-card-top {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  .team-icon {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    background: color-mix(in srgb, var(--member-color) 10%, transparent);
    border: 1px solid color-mix(in srgb, var(--member-color) 20%, transparent);
    color: var(--member-color);
  }

  .team-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .team-role-title {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .team-experience {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    font-weight: 500;
    margin-top: 2px;
  }

  .team-desc {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .team-skills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .team-skill {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.65rem;
    background: rgba(108, 92, 231, 0.08);
    border: 1px solid rgba(108, 92, 231, 0.15);
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .team-card:hover .team-skill {
    border-color: color-mix(in srgb, var(--member-color) 25%, transparent);
    background: color-mix(in srgb, var(--member-color) 8%, transparent);
  }

  @media (max-width: 740px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
