---
import { t, type Lang } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const team = [
  {
    initials: 'JP',
    name: 'Javier Pont√≥n',
    role: t(lang, 'team.javier.role'),
    experience: t(lang, 'team.javier.experience'),
    desc: t(lang, 'team.javier.desc'),
    skills: ['Java', 'Kotlin', 'Spring Boot', 'Microservices', 'DDD', 'AWS', 'GCP', 'Docker', 'Kubernetes'],
    color: '#6c5ce7',
  },
  {
    initials: 'TS',
    name: 'Tibor Strausz',
    role: t(lang, 'team.tibor.role'),
    experience: t(lang, 'team.tibor.experience'),
    desc: t(lang, 'team.tibor.desc'),
    skills: ['Java', 'Spring Boot', 'TypeScript', 'React', 'Angular', 'AWS', 'Docker', 'Scrum'],
    color: '#00cec9',
  },
];
---

<section class="section team" id="team">
  <div class="container">
    <div class="team-header animate-on-scroll">
      <p class="section-tagline">{t(lang, 'team.tagline')}</p>
      <h2 class="section-title">{t(lang, 'team.title')}</h2>
      <p class="team-subtitle">{t(lang, 'team.subtitle')}</p>
    </div>

    <div class="team-grid">
      {team.map((member, i) => (
        <div class="team-card animate-on-scroll" style={`--member-color: ${member.color}; animation-delay: ${i * 0.15}s`}>
          <div class="team-card-top">
            <div class="team-avatar" style={`background: linear-gradient(135deg, ${member.color}, ${member.color}88)`}>
              <span>{member.initials}</span>
            </div>
            <div class="team-info">
              <h3 class="team-name">{member.name}</h3>
              <p class="team-role">{member.role}</p>
              <span class="team-experience">{member.experience}</span>
            </div>
          </div>
          <p class="team-desc">{member.desc}</p>
          <div class="team-skills">
            {member.skills.map((skill) => (
              <span class="team-skill">{skill}</span>
            ))}
          </div>
          <div class="team-card-glow"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .team {
    position: relative;
    overflow: hidden;
  }

  .team-header {
    text-align: center;
    max-width: 650px;
    margin: 0 auto var(--space-3xl);
  }

  .team-subtitle {
    font-size: 1.05rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--space-xl);
  }

  .team-card {
    position: relative;
    padding: var(--space-2xl);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .team-card:hover {
    border-color: color-mix(in srgb, var(--member-color) 40%, transparent);
    transform: translateY(-4px);
  }

  .team-card-glow {
    position: absolute;
    top: -40%;
    right: -20%;
    width: 180px;
    height: 180px;
    background: var(--member-color);
    opacity: 0.04;
    border-radius: 50%;
    filter: blur(60px);
    transition: opacity var(--transition-base);
    pointer-events: none;
  }

  .team-card:hover .team-card-glow {
    opacity: 0.1;
  }

  .team-card-top {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-lg);
  }

  .team-avatar {
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .team-avatar span {
    font-size: 1.4rem;
    font-weight: 800;
    color: white;
    letter-spacing: 0.05em;
  }

  .team-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .team-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .team-role {
    font-size: 0.9rem;
    color: var(--color-accent-light);
    font-weight: 500;
  }

  .team-experience {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    font-weight: 500;
    margin-top: 2px;
  }

  .team-desc {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .team-skills {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .team-skill {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.65rem;
    background: rgba(108, 92, 231, 0.08);
    border: 1px solid rgba(108, 92, 231, 0.15);
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .team-card:hover .team-skill {
    border-color: color-mix(in srgb, var(--member-color) 25%, transparent);
    background: color-mix(in srgb, var(--member-color) 8%, transparent);
  }

  @media (max-width: 740px) {
    .team-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
