---
import { type Lang } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;

const results = [
  { metric: '0', metricLabel: 'downtime', sector: 'Telecom', region: lang === 'es' ? 'Europa' : 'Europe', desc: lang === 'es' ? 'Migración de plataforma legacy a microservicios' : 'Legacy platform migration to microservices', color: '#00a2e2' },
  { metric: '5x', metricLabel: lang === 'es' ? 'más transacciones' : 'more transactions', sector: 'Fintech', region: lang === 'es' ? 'España' : 'Spain', desc: lang === 'es' ? 'Arquitectura de banca digital y APIs de pagos' : 'Digital banking architecture and payment APIs', color: '#e74c3c' },
  { metric: '+300%', metricLabel: lang === 'es' ? 'rendimiento' : 'performance', sector: 'Retail', region: lang === 'es' ? 'Internacional' : 'International', desc: lang === 'es' ? 'Optimización de e-commerce y logística omnicanal' : 'E-commerce and omnichannel logistics optimization', color: '#00a651' },
  { metric: '+35%', metricLabel: 'engagement', sector: 'PropTech', region: lang === 'es' ? 'España' : 'Spain', desc: lang === 'es' ? 'Motor de búsqueda y sistema de recomendaciones' : 'Search engine and recommendation system', color: '#00e0d0' },
  { metric: '3', metricLabel: lang === 'es' ? 'semanas' : 'weeks', sector: 'Search AI', region: lang === 'es' ? 'España' : 'Spain', desc: lang === 'es' ? 'Integración de NLP en motor de búsqueda' : 'NLP integration in search engine', color: '#60A5FA' },
  { metric: '99.9%', metricLabel: 'uptime', sector: lang === 'es' ? 'Seguridad' : 'Security', region: lang === 'es' ? 'Internacional' : 'International', desc: lang === 'es' ? 'Plataforma de monitorización en tiempo real' : 'Real-time monitoring platform', color: '#fdcb6e' },
  { metric: '-40%', metricLabel: lang === 'es' ? 'costes ops.' : 'ops. costs', sector: lang === 'es' ? 'Transporte' : 'Transport', region: lang === 'es' ? 'Holanda' : 'Netherlands', desc: lang === 'es' ? 'Ticketing digital y planificación de rutas' : 'Digital ticketing and route planning', color: '#f9a825' },
  { metric: '<8', metricLabel: lang === 'es' ? 'sem. a producción' : 'weeks to prod', sector: lang === 'es' ? 'Inversión' : 'Investment', region: lang === 'es' ? 'España' : 'Spain', desc: lang === 'es' ? 'Plataforma de inversión automatizada desde cero' : 'Automated investment platform from scratch', color: '#6c5ce7' },
];
---

<section class="section results" id="clients">
  <div class="container">
    <div class="results-header animate-on-scroll">
      <p class="section-tagline">{lang === 'es' ? 'Resultados reales' : 'Real results'}</p>
      <h2 class="section-title">{lang === 'es' ? 'Proyectos que hablan por sí solos' : 'Projects that speak for themselves'}</h2>
    </div>

    <div class="results-grid">
      {results.map((r, i) => (
        <div class="result-card animate-on-scroll" style={`--result-color: ${r.color}; animation-delay: ${i * 0.06}s`}>
          <div class="result-metric">{r.metric}</div>
          <div class="result-metric-label">{r.metricLabel}</div>
          <span class="result-sector">{r.sector} · {r.region}</span>
          <span class="result-desc">{r.desc}</span>
          <div class="result-glow"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .results {
    background: var(--color-bg-alt);
    position: relative;
    overflow: hidden;
  }

  .results::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .results::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
  }

  .results-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-3xl);
  }

  .results-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-lg);
  }

  .result-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    padding: var(--space-xl) var(--space-lg);
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    overflow: hidden;
  }

  .result-card:hover {
    border-color: color-mix(in srgb, var(--result-color) 30%, transparent);
    background: var(--color-bg-card-hover);
    transform: translateY(-4px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
  }

  .result-glow {
    position: absolute;
    top: -40%;
    left: 50%;
    transform: translateX(-50%);
    width: 150px;
    height: 150px;
    background: var(--result-color);
    opacity: 0;
    border-radius: 50%;
    filter: blur(60px);
    transition: opacity 0.4s ease;
    pointer-events: none;
  }

  .result-card:hover .result-glow {
    opacity: 0.06;
  }

  .result-metric {
    font-family: var(--font-display);
    font-size: 2.2rem;
    font-weight: 800;
    line-height: 1;
    background: linear-gradient(135deg, var(--result-color), color-mix(in srgb, var(--result-color) 60%, white));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0;
  }

  .result-metric-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--result-color);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: var(--space-sm);
  }

  .result-sector {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    padding: 0.15rem 0.5rem;
    background: rgba(255, 255, 255, 0.04);
    border-radius: var(--radius-full);
  }

  .result-desc {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    text-align: center;
    line-height: 1.5;
    margin-top: var(--space-xs);
  }

  @media (max-width: 900px) {
    .results-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 400px) {
    .results-grid {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }
  }
</style>
