---
import { t, type Lang } from '../i18n/translations';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
---

<section class="hero">
  <div class="hero-bg">
    <div class="hero-gradient"></div>
    <div class="hero-gradient-2"></div>
    <div class="hero-grid"></div>
    <div class="hero-orb hero-orb-1"></div>
    <div class="hero-orb hero-orb-2"></div>
    <div class="hero-orb hero-orb-3"></div>
    <div class="hero-particles" id="hero-particles"></div>
  </div>

  <div class="container hero-content">
    <div class="hero-badge">
      <span class="badge-dot"></span>
      <span class="badge-text">{t(lang, 'hero.tagline')}</span>
    </div>

    <h1 class="hero-title">
      {t(lang, 'hero.title.line1')}<br />
      {t(lang, 'hero.title.line2')}<br />
      <span class="text-gradient hero-highlight">{t(lang, 'hero.title.highlight')}</span>
    </h1>

    <p class="hero-description">
      {t(lang, 'hero.description')}
    </p>

    <div class="hero-actions">
      <a href="#estimator" class="btn-primary btn-hero">
        {t(lang, 'hero.cta')}
        <svg width="18" height="18" viewBox="0 0 16 16" fill="none">
          <path d="M3.5 8H12.5M12.5 8L8.5 4M12.5 8L8.5 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      <a href="#method" class="btn-secondary">
        {t(lang, 'hero.cta.secondary')}
      </a>
    </div>

    <div class="hero-stats">
      <div class="stat">
        <span class="stat-number" data-count="3">3</span>
        <span class="stat-label">{t(lang, 'hero.stat.clients')}</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat">
        <span class="stat-number" data-count="50">50+</span>
        <span class="stat-label">{t(lang, 'hero.stat.projects')}</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat">
        <span class="stat-number" data-count="92">92%</span>
        <span class="stat-label">{t(lang, 'hero.stat.return')}</span>
      </div>
    </div>

    <div class="hero-trusted">
      <span class="trusted-label">{t(lang, 'hero.trusted')}</span>
      <div class="trusted-logos">
        <span>Fintech</span>
        <span>Retail</span>
        <span>Telecom</span>
        <span>PropTech</span>
        <span>SaaS</span>
      </div>
    </div>
  </div>

  <div class="hero-scroll-indicator">
    <div class="scroll-mouse">
      <div class="scroll-wheel"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    display: flex;
    align-items: center;
    padding-top: var(--nav-height);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero-gradient {
    position: absolute;
    top: -50%;
    left: 50%;
    transform: translateX(-50%);
    width: 140%;
    height: 100%;
    background: radial-gradient(ellipse at center, rgba(37, 99, 235, 0.2) 0%, rgba(37, 99, 235, 0.05) 40%, transparent 70%);
  }

  .hero-gradient-2 {
    position: absolute;
    bottom: -30%;
    left: 30%;
    width: 60%;
    height: 60%;
    background: radial-gradient(ellipse at center, rgba(16, 185, 129, 0.08) 0%, transparent 60%);
  }

  .hero-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.015) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 65%);
    -webkit-mask-image: radial-gradient(ellipse at center, black 20%, transparent 65%);
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    animation: float 10s ease-in-out infinite;
    will-change: transform;
  }

  .hero-orb-1 {
    width: 500px;
    height: 500px;
    top: 10%;
    right: -15%;
    background: rgba(37, 99, 235, 0.12);
  }

  .hero-orb-2 {
    width: 350px;
    height: 350px;
    bottom: 5%;
    left: -8%;
    background: rgba(16, 185, 129, 0.08);
    animation-delay: 3s;
  }

  .hero-orb-3 {
    width: 200px;
    height: 200px;
    top: 40%;
    left: 20%;
    background: rgba(147, 197, 253, 0.06);
    animation-delay: 6s;
    animation-duration: 12s;
  }

  .hero-particles {
    position: absolute;
    inset: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 850px;
    margin: 0 auto;
    padding: var(--space-4xl) var(--space-lg) var(--space-2xl);
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0.5rem 1.5rem;
    background: rgba(18, 18, 30, 0.8);
    border: 1px solid rgba(37, 99, 235, 0.2);
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-accent-light);
    margin-bottom: var(--space-2xl);
    animation: fadeInUp 0.5s ease-out both;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-success);
    border-radius: 50%;
    animation: pulse-glow 2s ease-in-out infinite;
    box-shadow: 0 0 12px rgba(16, 185, 129, 0.6);
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.8rem, 6.5vw, 5rem);
    font-weight: 800;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-xl);
    animation: fadeInUp 0.5s ease-out both;
  }

  .hero-highlight {
    position: relative;
    display: inline-block;
    background: linear-gradient(135deg, #2563EB, #60A5FA, #93C5FD, #60A5FA);
    background-size: 300% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: fadeInUp 0.5s ease-out both, gradientShift 4s ease-in-out infinite;
  }

  .hero-description {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--color-text-secondary);
    max-width: 580px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.75;
    animation: fadeInUp 0.5s ease-out 0.05s both;
  }

  .hero-actions {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
    margin-bottom: var(--space-4xl);
    animation: fadeInUp 0.5s ease-out 0.1s both;
  }

  .btn-hero {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2xl);
    animation: fadeInUp 0.5s ease-out 0.15s both;
    padding: var(--space-xl) var(--space-2xl);
    background: rgba(18, 18, 30, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-xl);
    margin-bottom: var(--space-2xl);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xs);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    background: var(--color-accent-gradient);
    background-size: 200% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 3s ease-in-out infinite;
  }

  .stat-label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    font-weight: 500;
  }

  .stat-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(to bottom, transparent, var(--color-border-hover), transparent);
  }

  .hero-trusted {
    animation: fadeInUp 0.5s ease-out 0.2s both;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .trusted-label {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 500;
  }

  .trusted-logos {
    display: flex;
    align-items: center;
    gap: var(--space-xl);
    flex-wrap: wrap;
    justify-content: center;
  }

  .trusted-logos span {
    font-size: 0.9rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.2);
    letter-spacing: 0.05em;
    transition: color var(--transition-base);
  }

  .trusted-logos span:hover {
    color: rgba(255, 255, 255, 0.5);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1;
    animation: fadeIn 1s ease-out 1.5s both;
  }

  .scroll-mouse {
    width: 24px;
    height: 38px;
    border: 2px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    display: flex;
    justify-content: center;
    padding-top: 6px;
  }

  .scroll-wheel {
    width: 3px;
    height: 8px;
    background: var(--color-accent-light);
    border-radius: 2px;
    animation: scrollDown 2s ease-in-out infinite;
  }

  @keyframes scrollDown {
    0% { transform: translateY(0); opacity: 1; }
    50% { transform: translateY(8px); opacity: 0.3; }
    100% { transform: translateY(0); opacity: 1; }
  }

  /* === Mobile: hero fits exactly in viewport === */
  @media (max-width: 640px) {
    .hero {
      min-height: 0;
      height: 100vh;
      height: 100dvh;
      align-items: stretch;
    }

    .hero-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: calc(100dvh - var(--nav-height));
      padding: var(--space-md) var(--space-lg);
      gap: 0;
    }

    .hero-badge {
      margin-bottom: var(--space-md);
      padding: 0.35rem 1rem;
      font-size: 0.75rem;
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
    }

    .hero-title {
      font-size: clamp(1.8rem, 7vw, 2.8rem);
      margin-bottom: var(--space-md);
    }

    .hero-description {
      margin-bottom: var(--space-lg);
      font-size: 0.95rem;
      line-height: 1.6;
    }

    .hero-actions {
      flex-direction: column;
      gap: var(--space-sm);
      margin-bottom: var(--space-lg);
    }

    .btn-hero {
      padding: 0.75rem 2rem;
      font-size: 1rem;
    }

    .hero-stats {
      gap: var(--space-md);
      padding: var(--space-md);
      margin-bottom: var(--space-md);
      backdrop-filter: none;
      -webkit-backdrop-filter: none;
    }

    .stat-number {
      font-size: 1.8rem;
    }

    .stat-label {
      font-size: 0.65rem;
    }

    .stat-divider {
      height: 35px;
    }

    .hero-trusted {
      flex-direction: column;
      gap: var(--space-xs);
    }

    .trusted-logos {
      gap: var(--space-sm);
    }

    .trusted-logos span {
      font-size: 0.75rem;
    }

    .trusted-label {
      font-size: 0.7rem;
    }

    .hero-scroll-indicator {
      display: none;
    }

    /* Reduce GPU-heavy effects on mobile */
    .hero-orb {
      filter: blur(60px);
      animation: none;
    }

    .hero-grid {
      display: none;
    }

    .hero-particles {
      display: none;
    }
  }

  /* Small phones (iPhone SE, etc) */
  @media (max-width: 380px) {
    .hero-title {
      font-size: clamp(1.6rem, 6.5vw, 2rem);
    }

    .hero-description {
      font-size: 0.875rem;
    }

    .hero-trusted {
      display: none;
    }
  }
</style>

<script>
  // Floating particles â€” fewer for performance, skip on mobile
  const container = document.getElementById('hero-particles');
  if (container && window.innerWidth > 640) {
    const count = window.innerWidth > 1024 ? 15 : 8;
    const frag = document.createDocumentFragment();
    for (let i = 0; i < count; i++) {
      const particle = document.createElement('div');
      const size = Math.random() * 3 + 1;
      particle.style.cssText = `
        position: absolute;
        width: ${size}px;
        height: ${size}px;
        background: rgba(96, 165, 250, ${Math.random() * 0.3 + 0.1});
        border-radius: 50%;
        left: ${Math.random() * 100}%;
        top: ${Math.random() * 100}%;
        animation: float ${Math.random() * 6 + 8}s ease-in-out infinite;
        animation-delay: ${Math.random() * 5}s;
      `;
      frag.appendChild(particle);
    }
    container.appendChild(frag);
  }
</script>
