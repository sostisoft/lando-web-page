---
import '../styles/global.css';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import FloatingCTA from '../components/FloatingCTA.astro';
import { t, type Lang, languages } from '../i18n/translations';

interface Props {
  title: string;
  description: string;
  lang: Lang;
  keywords?: string;
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, lang, keywords, ogImage, noindex = false } = Astro.props;

const siteUrl = Astro.site?.toString().replace(/\/$/, '') || '';
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).toString();
const currentPath = Astro.url.pathname.replace(/^\/(es|en|ca|eu)/, '');
const allLangs = Object.keys(languages) as Lang[];
const altUrls = allLangs
  .filter(l => l !== lang)
  .map(l => ({ lang: l, url: new URL(`/${l}${currentPath}`, Astro.site).toString() }));
const ogImageUrl = ogImage || `${siteUrl}/og-image.png`;

const localeMap: Record<Lang, string> = { es: 'es_ES', en: 'en_US', ca: 'ca_ES', eu: 'eu_ES' };

const defaultKeywords: Record<Lang, string> = {
  es: 'desarrollo software, consultoría tecnológica, desarrollo web, desarrollo aplicaciones, MVP, inteligencia artificial, apps móviles, transformación digital, desarrollo a medida, empresa desarrollo software España',
  en: 'software development, tech consulting, web development, app development, MVP, artificial intelligence, mobile apps, digital transformation, custom software, software development company Spain',
  ca: 'desenvolupament software, consultoria tecnològica, desenvolupament web, desenvolupament aplicacions, MVP, intel·ligència artificial, apps mòbils, transformació digital, software a mida, empresa desenvolupament software Espanya',
  eu: 'software garapena, aholkularitza teknologikoa, web garapena, aplikazio garapena, MVP, adimen artifiziala, app mugikorrak, eraldaketa digitala, software pertsonalizatua, software garapen enpresa Espainia',
};

const pageKeywords = keywords || defaultKeywords[lang];
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={pageKeywords} />
    <meta name="author" content="Lando" />
    <meta name="theme-color" content="#06060b" />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Canonical & Hreflang -->
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang={lang} href={canonicalUrl} />
    {altUrls.map(alt => (
      <link rel="alternate" hreflang={alt.lang} href={alt.url} />
    ))}
    <link rel="alternate" hreflang="x-default" href={new URL('/es/', Astro.site).toString()} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Lando" />
    <meta property="og:locale" content={localeMap[lang]} />
    {altUrls.map(alt => (
      <meta property="og:locale:alternate" content={localeMap[alt.lang]} />
    ))}
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Fonts: preload for faster render -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
        rel="stylesheet"
      />
    </noscript>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}favicon.svg`} />
    <link rel="apple-touch-icon" href={`${import.meta.env.BASE_URL}favicon.svg`} />

    <title>{title}</title>

    <!-- Structured Data: Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": "Lando",
      "description": lang === 'es'
        ? "Consultoría tecnológica de alto impacto. Desarrollo de software, aplicaciones web y móviles, inteligencia artificial y MVPs."
        : "High-impact tech consulting. Software development, web and mobile applications, artificial intelligence and MVPs.",
      "url": siteUrl,
      "logo": `${siteUrl}/logo.svg`,
      "image": ogImageUrl,
      "priceRange": "€€€",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Calle Humanitarias 19 1A",
        "addressLocality": "Madrid",
        "postalCode": "28025",
        "addressCountry": "ES"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "info@landofirm.com",
        "contactType": "customer service",
        "availableLanguage": ["Spanish", "English", "Catalan", "Basque"]
      },
      "areaServed": {
        "@type": "GeoCircle",
        "geoMidpoint": { "@type": "GeoCoordinates", "latitude": 40.4168, "longitude": -3.7038 },
        "geoRadius": "5000"
      },
      "serviceType": [
        "Software Development",
        "Web Development",
        "Mobile App Development",
        "Artificial Intelligence",
        "Technical Consulting",
        "MVP Development"
      ],
      "knowsAbout": [
        "Java", "Kotlin", "React", "TypeScript", "Node.js", "Python",
        "AWS", "Kubernetes", "Microservices", "Domain-Driven Design",
        "CI/CD", "DevOps", "Machine Learning", "NLP"
      ],
      "sameAs": [
        "https://github.com/sostisoft",
        "https://www.linkedin.com/company/landofirm"
      ],
      "inLanguage": [localeMap[lang].replace('_', '-')]
    })} />

    <!-- Structured Data: Services -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": t(lang, 'footer.services'),
      "itemListElement": [
        {
          "@type": "Service",
          "position": 1,
          "name": t(lang, 'services.consulting.title'),
          "description": t(lang, 'services.consulting.desc'),
          "provider": { "@type": "Organization", "name": "Lando" },
          "serviceType": "Technical Consulting"
        },
        {
          "@type": "Service",
          "position": 2,
          "name": t(lang, 'services.web.title'),
          "description": t(lang, 'services.web.desc'),
          "provider": { "@type": "Organization", "name": "Lando" },
          "serviceType": "Software Development"
        },
        {
          "@type": "Service",
          "position": 3,
          "name": t(lang, 'services.ai.title'),
          "description": t(lang, 'services.ai.desc'),
          "provider": { "@type": "Organization", "name": "Lando" },
          "serviceType": "AI Consulting"
        },
        {
          "@type": "Service",
          "position": 4,
          "name": t(lang, 'services.mvp.title'),
          "description": t(lang, 'services.mvp.desc'),
          "provider": { "@type": "Organization", "name": "Lando" },
          "serviceType": "MVP Development"
        }
      ]
    })} />

    <!-- Structured Data: WebSite with SearchAction -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Lando",
      "url": siteUrl,
      "inLanguage": localeMap[lang].replace('_', '-'),
      "description": description
    })} />

    <!-- Structured Data: BreadcrumbList -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": (() => {
        const items = [
          { "@type": "ListItem", "position": 1, "name": t(lang, 'legal.back').replace('← ', ''), "item": `${siteUrl}/${lang}/` }
        ];
        const path = Astro.url.pathname.replace(/^\/(es|en|ca|eu)\//, '').replace(/\/$/, '');
        if (path.startsWith('legal')) {
          items.push({ "@type": "ListItem", "position": 2, "name": "Legal", "item": `${siteUrl}/${lang}/legal/` });
          const pageName = title.replace(' — Lando', '');
          if (pageName && pageName !== 'Legal') {
            items.push({ "@type": "ListItem", "position": 3, "name": pageName, "item": canonicalUrl });
          }
        }
        return items;
      })()
    })} />

    <!-- Umami Analytics: loaded dynamically by CookieBanner based on user consent -->
  </head>
  <body>
    <a href="#main" class="skip-link">{t(lang, 'a11y.skip')}</a>
    <Nav lang={lang} />
    <main id="main">
      <slot />
    </main>
    <Footer lang={lang} />
    <FloatingCTA lang={lang} />
    <CookieBanner lang={lang} />

    <script>
      // Intersection Observer for scroll animations
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add('visible');
            }
          });
        },
        { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
      );

      document.querySelectorAll('.animate-on-scroll').forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>
